@Scripts.Render("~/application/setup-languages")
</br>
<h1>Language</h1>
<div ng-controller="languagesCTRL">
    <div>
        <form calss="form-inline">
            <div class="form-group row">
                <label class="col-sm-2" for="language-name">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="language-name" ng-model="newLanguage.Name" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2" for="language-code">Language Code</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="language-code" ng-model="newLanguage.LanguageCode" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary" ng-click="saveLanguage(newLanguage)">Save</button>
        </form>
        </br>
        <div class="col-sm-4" style="background-color:lavender;">Name</div>
        <div class="col-sm-4" style="background-color:lavender;">Language Code</div>
        <div class="col-sm-4" style="background-color:lavender;">Delete</div>
       
         <div ng-repeat="langauge in languages">

            <div class="col-sm-4" style="background-color:lavenderblush;">{{langauge.Name}}</div>
            <div class="col-sm-4" style="background-color:lavenderblush;">{{langauge.LanguageCode}}</div>
            <div class="col-sm-4" style="background-color:lavenderblush;" ng-click="removeLanguage(langauge)"><span class="glyphicon glyphicon-remove" /></div>
        </div>
    </div>
</div>
